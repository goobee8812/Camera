<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/DP_20PX">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/DP_60PX"
        android:layout_height="@dimen/DP_60PX"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/photo_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DP_10PX"
        android:layout_toRightOf="@+id/iv_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.magic.photo.photoviewlibrary.customView.PhotoGridImageView
            android:id="@+id/photoGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DP_180PX"
            android:layout_marginTop="@dimen/DP_10PX"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DP_15PX"
            android:layout_marginTop="@dimen/DP_15PX"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_addr"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/text_middle_size"/>

            <TextView
                android:id="@+id/tv_delete"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DP_20PX"
                android:text="@string/button_delete"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_middle_size"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>