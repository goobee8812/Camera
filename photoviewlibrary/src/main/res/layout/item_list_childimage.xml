<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        style="@style/text_style"/>

    <View
        android:id="@+id/line_horizontal"
        layout="@layout/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP_1PX"
        android:layout_below="@+id/tv_date"
        android:layout_marginTop="@dimen/DP_15PX"
        android:background="@color/line_color"/>

    <com.magic.photo.photoviewlibrary.customView.PhotoGridImageView
        android:id="@+id/gridImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_horizontal"
        android:layout_marginTop="@dimen/DP_20PX">

    </com.magic.photo.photoviewlibrary.customView.PhotoGridImageView>
</RelativeLayout>